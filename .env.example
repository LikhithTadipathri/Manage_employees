# Environment Configuration
ENVIRONMENT=development # development, staging, production

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# HTTPS/TLS Configuration (optional)
TLS_ENABLED=false
TLS_CERT_FILE=/etc/certs/server.crt
TLS_KEY_FILE=/etc/certs/server.key
TLS_MIN_VERSION=TLS12 # TLS12 or TLS13

DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION_HOURS=1

# Logging Configuration
LOG_LEVEL=debug # debug, info, warn, error
LOG_FORMAT=text # text or json
LOG_OUTPUT=stdout # stdout or file

# SMTP Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDR=no-reply@company.com
SMTP_FROM_NAME=HR Management System
EMAIL_QUEUE_WORKERS=3
